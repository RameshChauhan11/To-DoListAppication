@{
   
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    
}

<html>
<head>
    <style>
        form {
            box-shadow: 0px 0px 1px 2px black;
        }

        .inp {
            border-bottom: 2px solid grey;
        }
    </style>
</head>
<body>
    <div class="container m-5">
        <div class="row">
            <div class="col-sm-6 mx-auto ">
                <form class="p-3" method="post" id="myForm">
                    <h3 class="text-center">Sign <b class="text-danger">IN</b></h3><br />
                    <div class="row">
                        <div class="col-sm-3"><b>Name<b class="text-danger">*</b> :</b></div>
                        <div class="col-sm-9">
                            <input type="text" name="name" id="name" placeholder="Enter Name" class="inp form-control" />
                            <span class="text-danger" id="nameError">@Html.ValidationMessage("name")</span>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-3"><b>Email<b class="text-danger">*</b> :</b></div>
                        <div class="col-sm-9">
                            <input type="text" name="email" id="email" placeholder="Enter Email" class="inp form-control" />
                            <span class="text-danger" id="emailError">@Html.ValidationMessage("email")</span>

                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-3"><b>Mobile :</b></div>
                        <div class="col-sm-9">
                            <input type="number" name="mobile" id="mobile" placeholder="Enter Mobile" class="inp form-control" />
                            <span class="text-danger" id="mobileError">@Html.ValidationMessage("mobile")</span>

                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-3"><b>Password<b class="text-danger">*</b> :</b></div>
                        <div class="col-sm-9">
                            <input type="password" name="password" id="password" placeholder="Enter Password" class="inp form-control" />
                            <span class="text-danger" id="passwordError">@Html.ValidationMessage("password")</span>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-3"><b>Re-Password :</b></div>
                        <div class="col-sm-9">
                            <input type="password" name="re_password" id="re_password" placeholder="Enter Re-Password" class="inp form-control" />
                            <span class="text-danger" id="re_passwordError">@Html.ValidationMessage("re_password")</span>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-3"><input type="reset" value="Reset" class="btn btn-secondary form-control" /></div>
                        <div class="col-sm-9"><input type="submit" value="Sign In" class="btn btn-primary form-control" /></div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm12">
                            <span>If you are already Register. Please go  <b><a class="text-primary" href="/login/login">Back</a></b></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            document.querySelector("#myForm").addEventListener("submit", function (event) {
                var email=$('#email').val()
                var name=$('#name').val()
                var mobile=$('#mobile').val()
                var password=$('#password').val()
                var re_password=$('#re_password').val()
                let valid = true;
                if (!email) 
                {
                    $('#emailError').text("Email is Required.")
                    valid = false;
                }
                
                if (!name)
                {
                    $('#nameError').text("name is Required.")
                    valid = false;
                }
                if (mobile)
                {
                    if (mobile.length != 10) 
                    {
                        $('#mobileError').text("Mobile number must be of 10 digit")
                        valid = false;
                    }
                    if (!(mobile.toString().charAt(0)>=6))
                             {
                        $('#mobileError').text("Invaid Mobile number.")
                        valid = false;
                    }
                }
                if (!password)
                {
                    $('#passwordError').text("Password is Required.")
                    valid = false;
                }
                if (!re_password)
                {
                    $('#re_passwordError').text("Re-Password is Required.")
                    valid = false;
                }
                if (re_password != password)
                {
                    $('#re_passwordError').text("Password and Re-Password is not same. .")
                    valid = false;
                }
                if (!(email.toString().includes("@@")) || !(email.toString().includes("."))) {
                    $('#emailError').text("Invalid Email ? Email must be contain . and @@")
                    valid = false;
                }
                if (!valid) {
                    event.preventDefault()
                }
            })
        })
    </script>
</body>
</html>